{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@images/*": ["src/images/*"],
      "@utils/*": ["src/utils/*"],
      "@data/*": ["src/data/*"],
      "@martynasj/quiz-lib/*": ["src/lib/quiz-lib/*"],
      "@martynasj/quiz-lib": ["src/lib/quiz-lib/index.ts"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*",
    "gatsby-node.js",
    "./gatsby-config.ts",
    "./plugins/**/*"
  ]
}
